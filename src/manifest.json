{
	"manifest_version": 3,
	"name": "Sketchy",
	"version": "0.1",
	"description": "Slideshow using Google Images",
	"homepage_url": "https://github.com/ktoshima/sketchy",
	"permissions": [
		"activeTab"
	],
	"action": {
		"default_title": "Open sketchy",
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": ["background.js"],
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": ["https://www.google.com/search?*q=*&tbm=isch*"],
			"js": ["createGallery.js"]
		}
	]
}
