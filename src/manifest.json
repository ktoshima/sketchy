{
	"manifest_version": 3,
	"name": "Sketchy",
	"version": "0.1",
	"description": "Slideshow using Google Images",
	"homepage_url": "https://github.com/ktoshima/sketchy",
	"host_permissions": [
		"https://www.google.com/search?*"
	],
	"permissions": [
		"activeTab",
		"scripting"
	],
	"action": {
		"default_title": "Open sketchy",
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": ["background.js"],
		"type": "module"
	}
}
